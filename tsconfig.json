{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": false,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,

    "strictNullChecks": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    /* */
    "noEmit": false,
    /* */
    "noEmitOnError": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    //
    "src/**/*",
    "src/xeokitsdk/vite.config.js" // Add this line to include vite.config.js
    // "src/xeokitsdk/types/viewer/scene/postfx/CrossSections.d.ts"
  ],
  "exclude": ["node_modules"]
}
